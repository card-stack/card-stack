{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"jsx": "react-jsx",
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@card-stack/core": ["libs/core/src/index.ts"],
			"@card-stack/react": ["libs/react/src/index.ts"],
			"@card-stack/rook-deck": ["libs/rook-deck/src/index.ts"],
			"@card-stack/standard-deck": ["libs/standard-deck/src/index.ts"],
			"@card-stack/ui": ["libs/ui/src/index.ts"],
			"@card-stack/ui/*": ["libs/ui/src/*"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
